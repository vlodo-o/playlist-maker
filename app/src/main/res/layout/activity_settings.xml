<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">
        <Button
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_margin="@dimen/margin_tiny"
            android:backgroundTint="?attr/colorPrimaryVariant"
            app:icon="@drawable/ic_back"
            app:iconTint="?attr/colorOnSecondary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_size"
            android:paddingStart="@dimen/padding_small"
            android:layout_marginVertical="@dimen/margin_tiny"
            android:paddingTop="8dp"
            android:text="@string/settings"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/menu_text_size" />
    </LinearLayout>
    <Switch
        style="@style/SettingsButton"
        android:paddingEnd="5dp"
        android:text="@string/dark_theme"
        android:textSize="@dimen/text_size" />
    <Button
        style="@style/SettingsButton"
        android:paddingEnd="@dimen/settings_padding"
        android:text="@string/share"
        app:drawableEndCompat="@drawable/ic_share"/>
    <Button
        style="@style/SettingsButton"
        android:paddingEnd="14dp"
        android:text="@string/write_support"
        app:drawableEndCompat="@drawable/ic_support" />
    <Button
        style="@style/SettingsButton"
        android:paddingEnd="20dp"
        android:text="@string/agreement"
        app:drawableEndCompat="@drawable/ic_arrow" />
</LinearLayout>