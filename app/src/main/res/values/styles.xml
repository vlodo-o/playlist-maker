<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="navigationIcon">?homeAsUpIndicator</item>
        <item name="theme">@style/ToolbarColoredBackArrow</item>
        <item name="titleMarginStart">8dp</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="MenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_button_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="SettingsButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:paddingStart">@dimen/dimen_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="cornerRadius">0dp</item>
        <item name="drawableTint">?attr/colorSecondary</item>
    </style>

    <style name="SmallButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/color</item>
        <item name="android:textSize">@dimen/small_button_text_size</item>
        <item name="cornerRadius">@dimen/small_button_radius</item>
    </style>

    <style name="TrackInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_64dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
    </style>

    <style name="TrackInfoChangeableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

</resources>