<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorPrimaryVariant">@color/white_background</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_gray</item>
        <item name="colorSecondaryVariant">@color/yp_light_gray</item>
        <item name="colorOnSecondary">@color/yp_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_background</item>
        <item name="android:navigationBarColor">@color/white_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/ys_display_medium</item>

        <item name="color">@color/yp_white</item>

        <item name="floatingActionButtonColor">@color/gray_25_transparency</item>
    </style>
</resources>